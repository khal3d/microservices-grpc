{
  "require": {
    "spiral/php-grpc": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/",
      "": "gen/"
    }
  },
  "scripts": {
    "spiral-gen-proto": "protoc --php-grpc_out=./gen --php_out=./gen ../protos/service.proto --proto_path=../protos",
    "gen-proto": "protoc --grpc_out=./gen --php_out=./gen ../protos/service.proto --proto_path=../protos --plugin=protoc-gen-grpc=/root/grpc/bins/opt/grpc_php_plugin",
    "run-grpc-server": "rr-grpc serve -v -d"
  },
  "config": {
    "process-timeout": 0
  }
}
